#include <GUIConstantsEx.au3>
#include <MsgBoxConstants.au3>
#include <FileConstants.au3>
#include <EditConstants.au3>
#include <WindowsConstants.au3>
#include <WinAPIShPath.au3>

MDictGUI()

Func MDictGUI()
$hGUI1 = GUICreate("mdictGui 0.6.7", 517, 516, 192, 125)

$idButton_Descr = GUICtrlCreateButton("Descripton", 45, 18, 80, 22)
GUICtrlSetTip(-1, "Select File Descripton in UTF8")
$idButton_upd = GUICtrlCreateButton("GuiUpdate", 440, 16, 60, 24)
GUICtrlSetTip(-1, "GitHub mdictGui")
$idButton_vers = GUICtrlCreateButton("MdictVers", 440, 90, 60, 24)
GUICtrlSetTip(-1, "Display Mdict-utils version")
$idButton_pypi = GUICtrlCreateButton("MdictUpd", 440, 50, 60, 24)
GUICtrlSetTip(-1, "pypi.org/project/mdict-utils/")
GUICtrlCreateInput("File Descripton(UTF8)", 140, 14, 260, 32, BitOR($GUI_SS_DEFAULT_INPUT,$ES_MULTILINE))

$GroupPackMDX = GUICtrlCreateGroup("Pack MDX / Convert TXT to Sqlite3DB", 24, 56, 393, 88)
$idButton_BrowseUnp = GUICtrlCreateButton("Select MTXT", 45, 72, 80, 22)
GUICtrlCreateInput("Source Mdict", 140, 72, 260, 32, BitOR($GUI_SS_DEFAULT_INPUT,$ES_MULTILINE))
$idButton_Pack = GUICtrlCreateButton("Make MDX", 45, 110, 80, 22)
$idButton_PackDir = GUICtrlCreateButton("Pack All TXT", 140, 110, 80, 22)
GUICtrlSetTip(-1, "Pack MDX with many TXT files")
$idButton_ConvSqlit = GUICtrlCreateButton("Conv TXT Sql3", 315, 110, 84, 22)
GUICtrlSetTip(-1, "Convert TXT to sqlite3 DB")
GUICtrlCreateGroup("", -99, -99, 1, 1)

$GroupUnPackMDX = GUICtrlCreateGroup("UnPack MDX", 25, 166, 473, 100)
$idButton_BrowsePack = GUICtrlCreateButton("File MDX/MDD", 45, 192, 84, 22)
GUICtrlCreateInput("File MDX or MDD", 134, 192, 260, 32, BitOR($GUI_SS_DEFAULT_INPUT,$ES_MULTILINE))
$idButton_UnPack = GUICtrlCreateButton("Unpack MDX", 44, 232, 80, 22)
$idButton_UnpMDX_DBzip = GUICtrlCreateButton("UnpFile DBzip", 224, 232, 84, 22)
GUICtrlSetTip(-1, "Unpack MDX/MDD to sqlite3 DB with zip compress")
$idButton_Meta = GUICtrlCreateButton("Show Meta info", 400, 192, 84, 22)
GUICtrlSetTip(-1, "Meta information of MDX/MDD")
$idButton_UnpMDX_DB = GUICtrlCreateButton("UnpFile DB", 133, 232, 80, 22)
GUICtrlSetTip(-1, "Unpack MDX/MDD to sqlite3 DB")
$idButton_UnpSplit = GUICtrlCreateButton("UnpFile Split", 315, 232, 80, 22)
GUICtrlSetTip(-1, "Unpack MDX/MDD and split into n files.")
$ComboSplit = GUICtrlCreateCombo("0", 400, 232, 43, 25)
GUICtrlSetData($ComboSplit, "2|3|4|5|6|7|8|9|10", "0")
GUICtrlCreateLabel("parts", 448, 236, 34, 20)
GUICtrlSetFont(-1, 10, 400, 0, "MS Sans Serif")
GUICtrlCreateGroup("", -99, -99, 1, 1)

$GroupPackMDD = GUICtrlCreateGroup("Pack MDD", 29, 282, 393, 80)
$idButton_BrowseDir = GUICtrlCreateButton("Folder MDD", 45, 300, 80, 22)
GUICtrlCreateInput("Dir MDD", 134, 300, 260, 32, BitOR($GUI_SS_DEFAULT_INPUT,$ES_MULTILINE))
$idButton_PackMDD = GUICtrlCreateButton("Make MDD", 45, 329, 80, 22)
GUICtrlCreateGroup("", -99, -99, 1, 1)

$GroupUnPackMDD = GUICtrlCreateGroup("UnPack MDD / Convert Sqlite3DB to TXT", 30, 384, 393, 97)
$idButton_BrowseMDD = GUICtrlCreateButton("Select File", 45, 410, 80, 22)
$idButton_UnMDD = GUICtrlCreateButton("Unpack MDD", 45, 450, 80, 22)
GUICtrlCreateInput("File MDD or DB", 139, 410, 260, 32, BitOR($GUI_SS_DEFAULT_INPUT,$ES_MULTILINE))
$idButton_UnpSqlite3 = GUICtrlCreateButton("Conv Sql3 TXT", 315, 450, 84, 22)
GUICtrlSetTip(-1, "Convert sqlite3 DB to TXT")
GUICtrlCreateGroup("", -99, -99, 1, 1)

GUICtrlCreateLabel("Paths and file names must not contain spaces", 96, 488, 282, 20)
GUICtrlSetFont(-1, 10, 400, 0, "MS Sans Serif")
GUICtrlSetColor(-1, 0x0000FF)

GUISetState(@SW_SHOW)
        Local $iPIDPack = 0
	    Local $iPIDUnPack = 0
		Local $iPIDPackMDD = 0
	    Local $iPIDUnMDD = 0
		Local $iPIDMeta =0
		Local $iPIDvers =0
		Local $iPIDconv_db = 0
		Local $iPIDUn_db = 0
		Local $iPIDPack_all = 0
		Local $iPIDUnPack_db = 0
		Local $iPIDUnPack_zip = 0
		Local $iPIDUnPackSplit = 0
		Local  $sDesc=0
		Local  $sUnp=0
		Local  $sPack=0
		Local  $sUnMDD=0
		Local  $sPackMDD=0
		Local  $sComboRead=0
		Local  $Pack = ""
		Local  $Pack_ = ""
		Local  $sExt2 = ""
		Local  $sExt3 = ""

	; Display the GUI
	GUISetState(@SW_SHOW, $hGUI1)

		; Display a message of whether the file exists or Exit.
	        Local $iFileExists = FileExists("mdict.exe")
	   If $iFileExists Then
            Else
       If MsgBox(262209,"Check Mdict-utils","The mdict doesn't exist." & @CRLF & @CRLF & _
           "Pls visit, " & "github/liuyug/mdict-utils" & @CRLF & _
           "to download last 'mdict-windows'."& @CRLF & "Put mdictGui to 'mdict-windows'." & @CRLF) _
		   = 1 Then ShellExecute("https://github.com/liuyug/mdict-utils/releases")
               Exit
		    EndIf

		; Initialize a Local RUN script.
	        Local $aMsg = 0
				RunWait(@ComSpec & " /c %SystemDrive%&&cd %temp%&&echo %cd%>temp.tmp", "", @SW_hide); create temp file to save %cd%
                $file = FileOpen(@TempDir & "\temp.tmp", 0)
                $line = FileReadLine($file)

		; Check file path for spaces.
		    If StringInStr($line, " ") > 0 Then
            MsgBox( 0, "", "There is a space in the 'Ð¼dict' path and it may not work properly.")
            Else
            EndIf
		    ;------------------------------
		    Local $aMsg = 0
	While 1
			; Assign to $aMsg the advanced GUI messages.
		        $aMsg = GUIGetMsg($GUI_EVENT_ARRAY)
				Switch $aMsg[0]
					Case $GUI_EVENT_CLOSE
						ExitLoop
					EndSwitch

				; Switch from event Open Descr----------------------------1
				Switch $aMsg[0]
					Case $idButton_Descr
                    $sMessageDescr = "Please select a description file."
					$Descr = FileOpenDialog($sMessageDescr, @desktopdir & "\", "Description File (*.*)", BitOR($FD_FILEMUSTEXIST, $FD_MULTISELECT))
               If @error Then
	         Else
                   $Descr = StringReplace($Descr, "|", @CRLF)
                GUICtrlCreateInput($Descr, 140, 14, 260, 32 ,$ES_MULTILINE,$WS_EX_CLIENTEDGE)
		       ; Check file is encoding of UTF
		          Local $iEncoding = FileGetEncoding($Descr) ; Retrieve the file encoding of the current script.
	           If @error Then
					MsgBox(8192, "", "Error: Could not obtain the file encoding.")
	           ElseIf Not($iEncoding =256) + ($iEncoding =128) Then
		            MsgBox(8192, "", "You selected file Description:" & @CRLF & $Descr& @CRLF & @CRLF &"    Description is not UTF 8 !")
				Else
		        $sDesc=1
				EndIf
				; Check file path for spaces.
		        If StringInStr($Descr, " ") > 0 Then
				MsgBox( 0, "", "There is a space in the 'file' path and it may not work properly.")
                   Else
                EndIf ;----------------------
			          EndIf
				EndSwitch

				; Switch from event Open Mdict source MTXT-----------------2
				Switch $aMsg[0]
					Case $idButton_BrowseUnp
                 $sMessageUnp = "Please select your Mdict source file."
                $Unp = FileOpenDialog($sMessageUnp, @desktopdir & "\", "Mdict source (*.txt;*.mtxt)", BitOR($FD_FILEMUSTEXIST, $FD_MULTISELECT))
             If @error Then
             Else
                $Unp = StringReplace($Unp, "|", @CRLF)
	            $Un_=_WinAPI_PathRemoveExtension($Unp)
	            $Un_=_WinAPI_PathRemoveExtension($Un_)
		        $sUnp=1
                GUICtrlCreateInput($Unp, 140, 72, 260, 32 ,$ES_MULTILINE,$WS_EX_CLIENTEDGE)
		        Local $UnpDir = StringRegExpReplace($Unp, "\\[^\\]+$", "")
				; Check file path for spaces.
		        If StringInStr($Unp, " ") > 0 Then
				MsgBox( 0, "", "There is a space in the 'file' path and it may not work properly.")
                Else
                EndIf ;----------------------
	        EndIf
				EndSwitch

				; Switch from event Open MDX/MDD-------------------------------3
			    Switch $aMsg[0]
					Case $idButton_BrowsePack
		        $sMessagePack = "Please select an MDX/MDD file."
                $Pack = FileOpenDialog($sMessagePack, @desktopdir & "\", "Mdict file (*.mdx;*.mdd)", BitOR($FD_FILEMUSTEXIST, $FD_MULTISELECT))
	         If @error Then
	             Else
                 $Pack = StringReplace($Pack, "|", @CRLF)
		         $sPack=1
		         GUICtrlCreateInput($Pack, 134, 192, 260, 32, $ES_MULTILINE,$WS_EX_CLIENTEDGE)
				 $sExt3 = StringRegExpReplace($Pack, "^.*\.", "")
				; Check file path for spaces.
		        If StringInStr($Pack, " ") > 0 Then
				MsgBox( 0, "", "There is a space in the 'file' path and it may not work properly.")
                Else
                EndIf ;----------------------
            EndIf
				EndSwitch

				; Switch from event Button_Pack MDX------------------------4
				Switch $aMsg[0]
				    Case $idButton_Pack
				 If $sUnp = 0 Then
				   MsgBox(8192, "", "You are not chosen Mdict source")
			  Else
				 If $sDesc = 0 Then
                      If MsgBox(1, "Your choice","You choose Mdict source:"& @CRLF & ""&$Unp&""& @CRLF & _
				   "will be pack without Description as:"&$Un_&".mdx") = 1 Then
				   $iPIDPack = Run("mdict -a "&$Unp&" "&$Un_&".mdx", "", @SW_SHOWNORMAL)
				   Else
				   EndIf
				 Else
				   If MsgBox(1, "Your choice","You choose Mdict source:"& @CRLF _
				   & ""&$Unp&""& @CRLF &"will be pack as:"&$Un_&".mdx") = 1 Then
				   $iPIDPack = Run("mdict --description "&$Descr&" -a "&$Unp&" "&$Un_&".mdx", "", @SW_SHOWNORMAL)
				   Else
				   EndIf
		        EndIf
			       EndIf
				EndSwitch

				; Switch from event Button_UnPack MDX ----------------------5
				Switch $aMsg[0]
					Case $idButton_UnPack
			     If $sPack = 0 Or $sExt3 = "mdd" Then
				   MsgBox(8192, "", "You are not chosen MDX file")
				 Else
				If MsgBox(1, "Your choice","You choose MDX file:"& @CRLF & ""&$Pack&""& @CRLF &"will be unpack in dir: MDX")= 1 Then
                   $iPIDUnPack = Run("mdict -x "&$Pack&" -d ./mdx", "", @SW_SHOWNORMAL)
				   Else
				EndIf
			EndIf
				EndSwitch

				; Switch from event Button_Metainfo------------------------6
				Switch $aMsg[0]
					Case $idButton_Meta
			     If $sPack = 0 Then
				   MsgBox(8192, "", "You are not chosen MDX/MDD file")
				 Else
				   Run("cmd /c",@SW_SHOW)
				   $iPIDMeta = Run(@ComSpec & " /k "&$line&"\mdict.exe -m "&$Pack&"", "", @SW_SHOWNORMAL)
			EndIf
				EndSwitch

				; Switch from event Button_Mdict_version-------------------7
				Switch $aMsg[0]
					Case $idButton_vers
                   Run("cmd /c",@SW_SHOW)
				   $iPIDvers = Run(@ComSpec & " /k "&$line&"\mdict.exe --version", "", @SW_SHOWNORMAL)
				EndSwitch

				; Switch from event SelectDir MDD---------------------------8
				Switch $aMsg[0]
					Case $idButton_BrowseDir
						$sMessageUnpMDD = "Please select your Mdd folder."
                   $UnpMDD = FileSelectFolder($sMessageUnpMDD, "")
                  If @error Then
                     Else
		            $sUnMDD=1
                   GUICtrlCreateInput($UnpMDD, 134, 300, 260, 32 ,$ES_MULTILINE,$WS_EX_CLIENTEDGE)
				; Check file path for spaces.
		        If StringInStr($UnpMDD, " ") > 0 Then
				MsgBox( 0, "", "There is a space in the 'folder' path and it may not work properly.")
                   Else
                EndIf ;----------------------
	              EndIf
			    EndSwitch

				; Switch from event Open MDD file------------------------------9
			    Switch $aMsg[0]
					Case $idButton_BrowseMDD
		            $sMessagePackMDD = "Please select an MDD/DB file."
                $PackMDD = FileOpenDialog($sMessagePackMDD, @desktopdir & "\", "Open file (*.mdd;*.db)", BitOR($FD_FILEMUSTEXIST, $FD_MULTISELECT))
	               If @error Then
				Else
                   $PackMDD = StringReplace($PackMDD, "|", @CRLF)
		           $sPackMDD=1
		          GUICtrlCreateInput($PackMDD, 139, 410, 260, 32, $ES_MULTILINE,$WS_EX_CLIENTEDGE)
	                          $sExt2 = StringRegExpReplace($PackMDD, "^.*\.", "")
				; Check file path for spaces.
		        If StringInStr($PackMDD, " ") > 0 Then
				MsgBox( 0, "", "There is a space in the 'file' path and it may not work properly.")
                   Else
                EndIf ;----------------------
	               EndIf
				EndSwitch

				; Switch from event Button_Pack MDD-------------------------------10
				Switch $aMsg[0]
				    Case $idButton_PackMDD
				 If $sUnMDD = 0 Then
				   MsgBox(8192, "", "You are not chosen MDD source")
			    Else
				  If $sDesc = 0 Then
                   If MsgBox(1, "Your choice","You choose MDD source:"& @CRLF & ""&$UnpMDD&""& @CRLF _
					&"will be pack without Description as:"& @CRLF &$UnpMDD&".mdd") =1 Then
				   $iPIDPackMDD = Run("mdict -a "&$UnpMDD&" "&$UnpMDD&".mdd", "", @SW_SHOWNORMAL)
				   Else
				   EndIf
				 Else
				   If MsgBox(1, "Your choice","You choose Mdict source:"& @CRLF & ""&$UnpMDD&""& @CRLF &"will be pack as:"&$UnpMDD&".mdd")=1 Then
				   $iPIDPackMDD = Run("mdict --description "&$Descr&" -a "&$UnpMDD&" "&$UnpMDD&".mdd", "", @SW_SHOWNORMAL)
				   Else
				   EndIf
		        EndIf
			       EndIf
			EndSwitch

				; Switch from event Button_UnPack MDD-------------------------------11
				Switch $aMsg[0]
					Case $idButton_UnMDD
			     If $sPackMDD = 0 Or $sExt2 = "db"  Then
				   MsgBox(8192, "", "You are not chosen MDD file")
				 Else
				   if MsgBox(1, "Your choice","You choose MDD file:"& @CRLF & ""&$PackMDD&""& @CRLF &"will be unpack in dir: MDD")=1 Then
				   $iPIDUnMDD = Run("mdict -x "&$PackMDD&" -d ./mdd", "", @SW_SHOWNORMAL)
				   Else
				   EndIf
			     EndIf
				EndSwitch

				; Switch from event Button_UnPackMDD to Sqlite3-db------------------12
				Switch $aMsg[0]
					Case $idButton_UnpSqlite3
			     If $sPackMDD = 0 Or $sExt2 = "mdd"  Then
				   MsgBox(8192, "", "You are not chosen db file")
				 Else
				   If MsgBox(1, "Your choice","You choose Sqlite3 db file:"& @CRLF _
					& ""&$PackMDD&""& @CRLF &"will be unpack as:"&$PackMDD&".txt")=1 Then
				   $iPIDUn_db = Run("mdict --db-txt "&$PackMDD&"", "", @SW_SHOWNORMAL)
				   Else
				   EndIf
			     EndIf
				EndSwitch

				; Switch from event Button_Conv TXT Sql3----------------------------13
				Switch $aMsg[0]
				    Case $idButton_ConvSqlit
				 If $sUnp = 0 Then
				   MsgBox(8192, "", "You are not chosen Mdict source")
				 Else
                   If MsgBox(1, "Your choice","You choose Mdict source:"& @CRLF & ""&$Unp&""& @CRLF &"will be convert as:"&$Unp&".db")=1 Then
				   $iPIDconv_db = Run("mdict --txt-db "&$Unp&"", "", @SW_SHOWNORMAL)
				   Else
				   EndIf
				  EndIf
				EndSwitch

				; Switch from event Button_Pack All TXT----------------------------14
				Switch $aMsg[0]
				    Case $idButton_PackDir
				 If $sUnp = 0 Then
				   MsgBox(8192, "", "You are not chosen at last one Mdict source")
			  Else
				 If $sDesc = 0 Then
                   If MsgBox(1, "Your choice","In selected Mdict Folder :"& @CRLF & ""&$UnpDir&""& @CRLF _
				   & "all TXT will be pack without Description as :"& @CRLF &$UnpDir&"\All.mdx")=1 Then
			$iPIDPack_all = Run("mdict -a "&$UnpDir&" "&$UnpDir&"\All.mdx", "", @SW_SHOWNORMAL)
				   Else
			       EndIf
				Else
		           if MsgBox(1, "Your choice","In selected Mdict Folder :"& @CRLF & ""&$UnpDir&""& @CRLF _
				   &"all TXT will be pack as :"& @CRLF&$UnpDir&"\All_descr.mdx")=1 Then
			$iPIDPack_all = Run("mdict --description "&$Descr&" -a "&$UnpDir&" "&$UnpDir&"\All_descr.mdx", "", @SW_SHOWNORMAL)
				   Else
			       EndIf
		        EndIf
			       EndIf
				EndSwitch

				; Switch from event Button_UnPackMDX/MDD to DB-------------------------15
				Switch $aMsg[0]
					Case $idButton_UnpMDX_DB
			     If $sPack = 0 Then
				   MsgBox(8192, "", "You are not chosen MDX/MDD file")
				 Else
				$Pack_=_WinAPI_PathRemoveExtension($Pack)
				$Pack_=_WinAPI_PathRemoveExtension($Pack_)
				if $sExt3 = "mdx" Then
					if MsgBox(1, "Your choice","You choosed MDX file:"& @CRLF & ""&$Pack&""&@CRLF & @CRLF &"is packing as :"& @CRLF &$Pack_&".mdx.db")=1 Then
				   FileCopy($Pack, $Pack_&".mdx.mdx", $FC_OVERWRITE)
				   $iPIDUnPack_zip = Run("mdict -x "&$Pack_&".mdx.mdx --exdb", "", @SW_SHOWNORMAL)
				   MsgBox(8192, "Waiting for the end of Mdict","!Pls,wait while MDX unpacks into a db!")
				   FileDelete($Pack_&".mdx.mdx")
					Else
				   EndIf
					Else
				        if MsgBox(1,"Your choice","You choosed MDX file:"& @CRLF & ""&$Pack&""&@CRLF _
					    & @CRLF &"is packing as :"& @CRLF &$Pack_&".mdd.db")=1 Then
					FileCopy($Pack, $Pack_&".mdd.mdd", $FC_OVERWRITE)
				   $iPIDUnPack_zip = Run("mdict -x "&$Pack_&".mdd.mdd --exdb", "", @SW_SHOWNORMAL)
				   MsgBox(8192, "Waiting for the end of Mdict","!Pls,wait while MDD unpacks into a db!")
				   FileDelete($Pack_&".mdd.mdd")
						Else
				        EndIf
				     EndIf
			       EndIf
				EndSwitch

				; Switch from event Button_UnPackMDX/MDD to DBzip-----------------------16
				Switch $aMsg[0]
					Case $idButton_UnpMDX_DBzip
			     If $sPack = 0  Then
				   MsgBox(4096, "", "You are not chosen MDX/MDD file")
				 Else
				$Pack_=_WinAPI_PathRemoveExtension($Pack)
				$Pack_=_WinAPI_PathRemoveExtension($Pack_)
				if $sExt3 = "mdx" Then
					  if MsgBox(1,"Your choice", "You choosed MDX file:"& @CRLF & ""&$Pack&""&@CRLF _
					  & @CRLF &"is packing as compressed:"& @CRLF &$Pack_&".mdx_zip.db") =1 Then
				   FileCopy($Pack, $Pack_&".mdx_zip.mdx", $FC_OVERWRITE)
				   $iPIDUnPack_zip = Run("mdict -x "&$Pack_&".mdx_zip.mdx --exdb-zip", "", @SW_SHOWNORMAL)
				   MsgBox(8192, "Waiting for the end of Mdict","!Pls,wait while MDX unpacks into a db zip!")
				   FileDelete($Pack_&".mdx_zip.mdx")
					  Else
				      EndIf
					  Else
					    if MsgBox(1,"Your choice","You choosed MDX file:"& @CRLF & ""&$Pack&""&@CRLF _
						& @CRLF &"is packing as compressed:"& @CRLF &$Pack_&".mdd_zip.db") =1 Then
					FileCopy($Pack, $Pack_&".mdd_zip.mdd", $FC_OVERWRITE)
				   $iPIDUnPack_zip = Run("mdict -x "&$Pack_&".mdd_zip.mdd --exdb-zip", "", @SW_SHOWNORMAL)
				   MsgBox(8192, "Waiting for the end of Mdict","!Pls,wait while MDD unpacks into a db zip!")
				   FileDelete($Pack_&".mdd_zip.mdd")
						Else
				        EndIf
				     EndIf
				 EndIf
				EndSwitch

                ; Switch from event Select Combo Split Parts----------------------------17
				Switch $aMsg[0]
			        Case $ComboSplit
				$sComboRead = GUICtrlRead($ComboSplit)
				EndSwitch

				; Switch from event Button_UnPack MDX/MDD to Splits---------------------18
				Switch $aMsg[0]
					Case $idButton_UnpSplit
			        If $sPack = 0  Then
				   MsgBox(8192, "", "You are not chosen MDX/MDD file")
				 Else
				 If  $sComboRead = 0 Then
					 MsgBox(8192, "", "You are not chosen Splits: " & $sComboRead)
				 Else
				    if $sExt3="mdx"     Then
				        if MsgBox(1,"Your choice","You choose MDX file:"& @CRLF & ""&$Pack&""& @CRLF _
						&"will be unpacked into "&$sComboRead&" parts in dir : "&$sExt3)=1 Then
				   $iPIDUnPackSplit = Run("mdict -x "&$Pack&" -d ./mdx --split-n "&$sComboRead&"", "", @SW_SHOWNORMAL)
						Else
				        EndIf
				 ElseIf $sExt3="mdd"    Then
				        if MsgBox(1,"Your choice","You choose MDD file:"& @CRLF & ""&$Pack&""& @CRLF _
						&"will be unpacked into "&$sComboRead&" parts in dir : "&$sExt3)=1 Then
				   $iPIDUnPackSplit = Run("mdict -x "&$Pack&" -d ./mdd --split-n "&$sComboRead&"", "", @SW_SHOWNORMAL)
						Else
				        EndIf
				    EndIf
			    EndIf
			EndIf
				EndSwitch

                ; Switch from event Button GuiUpdate---------------------------------19
				Switch $aMsg[0]
			        Case $idButton_upd
				If MsgBox(1,"Check the latest mdictGui releases", "Want to check the GitHub repository"& @CRLF & _
				"for the latest mdictGui releases?") = 1 Then ShellExecute("https://github.com/jekovcar/mdict-utils-Gui/releases")
				EndSwitch

                ; Switch from event Button mdict Pypi-------------------------------20
				Switch $aMsg[0]
			        Case $idButton_pypi
				If MsgBox(1,"Check the latest mdict-utils", "Want to check Project mdict-utils"& @CRLF & _
				"on Pypi.Org for the latest releases?") = 1 Then ShellExecute("https://pypi.org/project/mdict-utils/")
				EndSwitch

	WEnd
	Run(@ComSpec & " /c taskkill /IM cmd.exe /F","",@SW_HIDE)
	GUIDelete($hGUI1)
	If $iPIDPack  Then ProcessClose($iPIDPack )
	If $iPIDUnPack Then ProcessClose($iPIDUnPack)
	If $iPIDPackMDD  Then ProcessClose($iPIDPackMDD )
	If $iPIDUnMDD Then ProcessClose($iPIDUnMDD)
	If $iPIDMeta Then ProcessClose($iPIDMeta)
	If $iPIDvers Then ProcessClose($iPIDvers)
	If $iPIDconv_db Then ProcessClose($iPIDconv_db)
	If $iPIDUn_db Then ProcessClose($iPIDUn_db)
	If $iPIDPack_all Then ProcessClose($iPIDPack_all)
	If $iPIDUnPack_db Then ProcessClose($iPIDUnPack_db)
	If $iPIDUnPack_zip Then ProcessClose($iPIDUnPack_zip)
	If $iPIDUnPackSplit Then ProcessClose($iPIDUnPackSplit)
	EndFunc   ;==========
